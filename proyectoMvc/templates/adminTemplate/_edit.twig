{% extends '_base.twig' %}
{% block content %}
<div class="content-wrapper">
  <div class="row">
    <div class="col-lg-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h3 class='mb-4'>{{ accion }}</h3>
          {#<p class="card-description">#}
          {#  Formulario de usuario#}
          {#</p>#}
          <form class="forms-sample" method='POST' action='{{ route ?: 'edit/doedit'}}' id='form-user'>
            <div class="form-group">
              <label for="nombre">Nombre</label>
              <input type="text" class="form-control" id="nombre" name='nombre' placeholder="Nombre de usuario" value='{{edituser.nombre}}' required>
            </div>
            <div class="form-group">
              <label for="alias">Alias</label>
              <input type="text" class="form-control" id="alias" name='alias' placeholder="Alias de usuario" value='{{edituser.alias}}' required>
            </div>
            <div class="form-group">
              <label for="correo">Email</label>
              <input type="email" class="form-control" id="correo" name='correo' placeholder="Email" value='{{edituser.correo}}' required>
            </div>
            <div class="form-group">
              <label for="clave">Contrase単a</label>
              <input type="password" class="form-control" id="clave" name='clave' placeholder="Contrase単a" {{new ? 'require' : ''}}>
            </div>
            <div class="form-group">
              <label for="rpasswd">Repite Contrase単a</label>
              <input type="password" class="form-control" id="rclave" placeholder="Contrase単a" {{new ? 'require' : ''}}>
            </div>
            {% if admin %}
            <div class="form-check">
              <label class='form-check-label'>
                <input type="checkbox" class="form-check-input" id="activo" name='activo' {{edituser.activo == 1 ? 'checked' : '' }}>
                Activo
              </label>
            </div>
            <div class="form-check mb-4">
              <label class='form-check-label'>
                <input type="checkbox" class="form-check-input" id="administrador" name='administrador' {{edituser.administrador == 1 ? 'checked' : '' }}>
                Administrador
              </label>
            </div>
              {% else %}
              <div class="form-check">
                <label class='form-check-label'>
                  <input type="checkbox" class="form-check-input" name='bajatmp'>
                  Baja temporal
                </label>
              </div>
              <div class="form-check mb-4">
                <label class='form-check-label'>
                  <input type="checkbox" class="form-check-input" name='baja'>
                  Baja Permanente
                </label>
              </div>
            {% endif %}
            <button type="submit" class="btn btn-success mr-2">Guardar</button>
            <a href='index/main'>
              <button type='button' class="btn btn-light">Cancelar</button>
            </a>
            <input type='hidden' name='id' value='{{edituser.id}}'>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
        
{% extends '_base.twig' %}
{% block content %}
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Orders</h4>
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>
                      Nombre
                    </th>
                    <th>
                      Alias
                    </th>
                    <th>
                      Correo
                    </th>
                    {% if user.administrador == 1 %}
                    <th>
                      Activo
                    </th>
                    <th>
                      Admin
                    </th>
                    <th>
                      Editar
                    </th>
                    <th>
                      Eliminar
                    </th>
                    {% endif %}
                  </tr>
                </thead>
                <tbody>
                  {% for item in users%}
                    <tr>
                      <td>
                        {{item.nombre}}
                      </td>
                      <td>
                        {{item.alias}}
                      </td>
                      <td>
                        {{item.correo}}
                      </td>
                      {% if user.administrador == 1 %}
                        <td>
                          {% if item.activo == 1%}
                            <i class='fa fa-check-square-o text-success'></i>
                          {% else %}
                            <i class='fa fa-minus text-secondary'></i>
                          {% endif %}
                        </td>
                        <td>
                          {% if item.administrador == 1%}
                            <i class='fa fa-check-square-o text-success'></i>
                          {% else %}
                            <i class='fa fa-minus text-secondary'></i>
                          {% endif %}
                        </td>
                        <td>
                          <a href='index/doedit?id={{item.id}}'>
                            <button type='button' class='btn btn-inverse-info btn-rounded btn-sm'>
                              <i class='mdi mdi-file-document'></i>
                              Editar
                            </button>
                          </a>
                        </td>
                        <td>
                          <a href='index/dodelete?id={{item.id}}'>
                            <button type='button' class='btn btn-inverse-danger btn-rounded btn-sm'>
                              <i class='mdi mdi-alert-outline'></i>
                              Eliminar
                            </button>
                          </a>
                        </td>
                      {% endif %}
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
        
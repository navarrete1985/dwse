{% extends '_base.twig' %}
{% block content %}
<div class="content-wrapper">
  <div class="row">
    <div class="col-lg-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h3 class='mb-4'>{{ accion }}</h3>
          <div class="forms-sample" data-action='{{accion}}' id='form-link'>
            <div class="form-group">
              <label for="alias">Categoria</label>
              <div class='row'>
                <div class='col-md-6 col-sm-12'>
                  <select class="form-control" name='categoria' id='selectList'>
                    {% for category in categories %}
                      <option value='{{category.id}}'>{{category.categoria}}</option>
                    {% endfor %}    
                  </select>
                </div>
                <div class='col-md-6 col-sm-12'>
                  <div class='row'>
                    <div class='col-md-10'>
                      <input type="text" class="form-control" id="category-name" placeholder="AÃ±adir nueva categoria">
                    </div>
                    <div class='col-md-2'>
                      <button class="btn btn-success icon-btn" type="button" id='add-category' data-action='ajax/addCategory'><i class="fa fa-plus"></i></button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="correo">Url</label>
              <input type="url" class="form-control" id="link" name='link' placeholder="Url del sitio" required>
            </div>
            <div class="form-group">
              <label for="clave">Comentario</label>
              <textarea class='form-control' name='comentario' rows=5></textarea>
            </div>
            <button type="button" class="btn btn-success mr-2" id='save' data-action='ajax/addLink'>Guardar</button>
            <a href='index/main'>
              <button type='button' class="btn btn-light">Cancelar</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
        